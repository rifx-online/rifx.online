---
import Pagination from "@/components/Pagination.astro";
import config from "@/config/config.json";
import Base from "@/layouts/Base.astro";
import { getListPage, getSinglePage } from "@/lib/contentParser.astro";
import { getAllTaxonomy, getTaxonomy } from "@/lib/taxonomyParser.astro";
import { supportedLang } from "@/lib/utils/languageParser";
import { sortByDate } from "@/lib/utils/sortFunctions";
import PageHeader from "@/partials/PageHeader.astro";
import PostSidebar from "@/partials/PostSidebar.astro";
import type { ContentEntryMap } from "astro:content";
import ModelCard from "@/components/ModelCard.astro";

export const prerender = true;

export function getStaticPaths() {
  return supportedLang.map((lang) => ({
    params: { lang: lang || undefined },
  }));
}

// 确保只在实际的索引页面上运行这段代码
const { lang } = Astro.params;

// 添加对中文的检查
if (lang === 'zh') {
  // 处理中文的逻辑，例如重定向或其他操作
  // 这里可以添加您需要的逻辑
  console.log('zh-------');
}

if (Astro.url.pathname.split('/').length > 3) {
  return Astro.redirect('/404');
}

const MODELS_FOLDER = "models";
const postIndex = await getListPage(
  MODELS_FOLDER,
  lang as keyof ContentEntryMap
);
const langCollection: keyof ContentEntryMap = lang as keyof ContentEntryMap;
const posts = await getSinglePage(MODELS_FOLDER, lang as keyof ContentEntryMap);



const allCategories = await getAllTaxonomy(langCollection, "categories", "models");
const categories = await getTaxonomy(langCollection, "categories", "models");
const tags = await getTaxonomy(langCollection, "tags", "models");
const sortedPosts = sortByDate(posts);
const totalPages: number = Math.ceil(posts.length / config.settings.pagination);
const currentPosts = sortedPosts.slice(0, config.settings.pagination);

---

<Base
  title={postIndex[0].data.title}
  meta_title={postIndex[0].data.meta_title}
  image={postIndex[0].data.image}
  description={postIndex[0].data.description}
>
  <PageHeader title={postIndex[0].data.title} />
  <section class="section">
    <div class="container">
      <div class="row gx-5">
        <!-- blog posts -->
        <div class="lg:col-8">
          <div class="row">
            {
              currentPosts.map((post) => (
                <div class="mb-14">
                  <ModelCard data={post} />
                </div>
              ))
            }
          </div>
          <Pagination
            section={MODELS_FOLDER}
            currentPage={1}
            totalPages={totalPages}
          />
        </div>

        <!-- sidebar -->
        <PostSidebar
          categories={categories}
          tags={tags}
          allCategories={allCategories}
        />
      </div>
    </div>
  </section>
</Base>
